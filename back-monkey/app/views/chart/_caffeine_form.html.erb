<div id="caffeine_form" class="substance_form hidden">
  <%= form_for :caffeine_calc, url: {action: :create, controller: :caffeine_calc}, remote: true do |f|%>
  <div class="line">
    I am a <%= f.select :gender, options_for_select([["Male", 'm'],["Female",'f']]), {required: true}, { :class => "drop_down" }  %> weighing
    <%= f.number_field :weight, required: true %> pounds. </div>
    <div class="line">
      I had
      <%= f.number_field :cups, required: true, min: 1 %> cups of
      <%= f.select :type, options_for_select([['coffee', 'coffee'],['tea', 'tea']]), {required: true}, {:class => "drop_down"}%>
  in  
<%= f.number_field :hours, required: true, min: 1 %> hours.
    </div>
    <div class="submit">
      <%= f.submit "Check caffeine levels", :class=> "button" %>
    </div>
  <% end %>
</div>


